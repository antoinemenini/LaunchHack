<h1>Sign in</h1>

  <%= form_for(:session, url: sessions_path, html: {class: "form"}) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Sign in", class: "btn btn-green" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>