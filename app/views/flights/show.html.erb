<p id="notice"><%= notice %></p>

<p>
  <strong>Airline:</strong>
  <%= @flight.airline %>
</p>

<p>
  <strong>Departuretime:</strong>
  <%= @flight.departuretime %>
</p>

<p>
  <strong>Flightnumber:</strong>
  <%= @flight.flightnumber %>
</p>

<p>
  <strong>Departureairport:</strong>
  <%= @flight.departureairport %>
</p>

<p>
  <strong>Arrivalairport:</strong>
  <%= @flight.arrivalairport %>
</p>
<% if signed_in? %>
  <% if @flight.posts.any? %>
      <% @flight.posts.each do |post| %>
            <h4><%= post.user_id %>
            </h4>
            <p>
            <%= post.description %>
            <%= post.weight %> Kg
            </p>
      <% end %>
    <% end %>
 <% else %>
 <p>
  Test 
 </p>   
<% end %>





