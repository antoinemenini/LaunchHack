<p id="notice"><%= notice %></p>

<p>
  <strong>Airline:</strong>
  <%= @flight.airline %>
</p>

<p>
  <strong>Departuretime:</strong>
  <%= @flight.departuretime %>
</p>

<p>
  <strong>Flightnumber:</strong>
  <%= @flight.flightnumber %>
</p>

<p>
  <strong>Departureairport:</strong>
  <%= @flight.departureairport %>
</p>

<p>
  <strong>Arrivalairport:</strong>
  <%= @flight.arrivalairport %>
</p>
<% if signed_in? %>
  <% if @flight.posts.any? %>
      <% @flight.posts.each do |post| %>
            <h4><%= post.user_id %>
            </h4>
            <p>
            <%= post.description %>
            <%= post.weight %> Kg
            </p>
      <% end %>
    <% end %>
 <% else %>
 <% if @flight.posts.any? %>
 <% total = 0 %>
      <% @flight.posts.each do |post| %>
            <% total += post.weight %>
      <% end %>
      <%= total %>
    <% end %> 
<% end %>

<p>
<%= link_to "Add post", controller: "posts", action: "new", flight_id: @flight.id%>
</p>

<% if signed_in? %>
<%= link_to 'Sign Out', signout_path, method: 'delete' %>
<% else %>
<% end %>
</p>

<%= link_to 'Edit', edit_flight_path(@flight) %> |
<%= link_to 'Back', flights_path %>
