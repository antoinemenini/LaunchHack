      <ul>
      <% @flight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="fondblanc">
  <div class="field">
    <%= f.label :airline %><br>
    <%= f.text_field :airline %>
  </div>
