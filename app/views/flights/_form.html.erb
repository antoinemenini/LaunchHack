                $(function(){
                        $('#date_picker').datetimepicker();
                });
  </script>
  
  <div class="field">
    <%= f.label :flightnumber %><br>
    <%= f.text_field :flightnumber %>
  </div>
  <div class="field">
    <%= f.label :departureairport %><br>
    <%= f.text_field :departureairport %>
  </div>
  <div class="field">
    <%= f.label :arrivalairport %><br>
    <%= f.text_field :arrivalairport %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
